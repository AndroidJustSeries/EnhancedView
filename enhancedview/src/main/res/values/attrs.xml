<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EnhancedView">
        <attr name="html" format="string" />

        <attr name="textColorNormal" format="color" />
        <attr name="textColorSelected" format="color" />
        <attr name="textSize" format="dimension" />

        <attr name="BgStrokeColorNormal" format="color" />
        <attr name="BgStrokeColorSelected" format="color" />
        <attr name="BgColorNormal" format="color" />
        <attr name="BgColorSelected" format="color" />
        <attr name="BgRadius" format="dimension" />
        <attr name="StrokeWidth" format="dimension" />

        <attr name="selected" format="boolean" />
        <attr name="underline" format="boolean" />

        <attr name="cfont">
            <enum name="light" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="bold" value="3"/>
            <enum name="extrabold" value="4"/>
        </attr>

        <attr name="imgNormal" format="reference|color"/>
        <attr name="imgSelect" format="reference|color"/>
        <attr name="imgPressed" format="reference|color"/>

        <!--Glide image load url-->
        <attr name="imgUrl" format="string" />
        <attr name="viewType">
            <!--무조건 이미지에 맞춰서 View가 커질수 있는 한계만큰 그려줌-->
            <enum name="fit_center" value="1"/>
            <!--가로보다 세로가 큰 이미지는 Center crop함-->
            <enum name="center_crop_larger_height" value="2"/>
            <!--View보다 큰 이미지만 View에 맞추고 작은 이미지는 원본 이미지크기로 보여줌-->
            <enum name="fit_center_larger_drawable" value="3"/>
        </attr>

        <attr name="isGroup" format="boolean"/>


        <attr name="isCircle" format="boolean"/>
        <attr name="roundAll" format="dimension" />

        <attr name="roundTL" format="dimension" />
        <attr name="roundTR" format="dimension" />
        <attr name="roundBL" format="dimension" />
        <attr name="roundBR" format="dimension" />

    </declare-styleable>

</resources>